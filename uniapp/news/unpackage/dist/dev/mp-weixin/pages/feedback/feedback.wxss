          box-sizing: border-box;
}
.feedback-box .box-title {
  margin-bottom: 10px;
  color: #333;
  font-size: 18px;
  font-weight: bold;
}
.feedback-box .box-body {
  margin-bottom: 10px;
}
.feedback-box .box-body .text {
  -webkit-box-sizing: border-box;
          box-sizing: border-box;
  border: 1px solid #ccc;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  height: 100px;
  padding: 10px;
  width: 100%;
  margin-bottom: 10px;
  background-color: #fff;
}
.feedback-box .box-body .img {
  width: 100%;
}
.feedback-box .box-body .img .imgs {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.feedback-box .box-body .img .imgs .imgs-item {
  -webkit-flex-shrink: 0;
          flex-shrink: 0;
  position: relative;
  width: 33.33%;
  height: 0;
  padding-top: 33.33%;
}
.feedback-box .box-body .img .imgs .imgs-item .img-box {
  position: absolute;
  top: 5px;
  left: 5px;
  right: 5px;
  bottom: 5px;
  border: 1px solid #ccc;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  background-color: #fff;
}
.feedback-box .box-body .img .imgs .imgs-item .img-box image {
  width: 100%;
  height: 100%;
}
