page {
  height: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  background-color: #f5f5f5;
}
.content {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  margin: 10px 10px 0;
}
.content .edit-box {
  background-color: #fff;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  margin-bottom: 10px;
}
.content .edit-box .edit-head {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  border-bottom: 1px solid #eee;
  padding: 10px;
}
.content .edit-box .edit-head text {
  color: #666;
  font-size: 16px;
  font-weight: bold;
}
.content .edit-box .edit-head text:last-child {
  color: #4cd964;
}
.content .edit-box .edit-head text:first-child {
  color: #ff5722;
}
.content .edit-box .edit-area {
  padding: 10px;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
}
.content .edit-box .edit-area .label-item {
  padding: 5px 10px;
  border: 1px solid #ccc;
  -webkit-border-radius: 5px;
          border-radius: 5px;
  color: #ccc;
  font-size: 14px;
  margin: 0 10px 10px 0;
  position: relative;
}
.content .edit-box .edit-area .label-item .label-clear {
  position: absolute;
  top: -8px;
  right: -8px;
}
.content .edit-box .edit-area .noTab {
  width: 100%;
  text-align: center;
  color: #ccc;
  font-size: 16px;
}

