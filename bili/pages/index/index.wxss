.main {
  padding: 10rpx;
  color: #aaa;
}
/* 导航条区域 */
.nav_wrap {
}
.nav {
  white-space: nowrap;
}
.nav_item {
  display: inline-block;
  padding: 15rpx 30rpx;
}
.nav_item.active {
  border-bottom: 3px solid #ff8eb3;
}
/* 轮播图区域 */
.carousel {
  margin: 10rpx 0;
}
.carousel image {
  width: 100%;
}
/* 视频列表区域 */
.watch_wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-around;
}
.watch_wrap .wrap {
  width: 48%;
  margin-bottom: 10rpx;
  /* border: 1px solid red; */
  overflow: hidden;
}
.watch {
  /* width: 48%; */
  /* margin-bottom: 10rpx; */
  /* border: 1px solid yellow; */
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  box-shadow: 0 0 10rpx #ccc;
}
.watch .img {
  width: 100%;
  height: 240rpx;
}
.watch .user_wrap {
  width: 100%;
  background-color: rgba(0, 0, 0, 0.2);
  display: flex;
  justify-content: space-around;
  align-items: center;
  position: absolute;
  left: 0;
  bottom: 0;
}
.watch .user {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  overflow: hidden;
}
.watch .user_img {
  width: 100%;
  height: 100%;
}
.watch .user_wrap text {
  color: red;
}
.watch_wrap .info {
  width: 100%;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}
